<Segment name="G92" comment="To identify the reason for a change to a previously transmitted purchase order">
  <Field name="ChangeOrResponseTypeCode" min="2" max="2" validation="T670" comment="Code specifying the type of change to the line item"/>
  <Field name="Date" type="date" min="8" max="8" comment="Date expressed as CCYYMMDD where CC represents the first two digits of the calendar year"/>
  <Field name="PurchaseOrderNumber" min="1" max="22" comment="Identifying number for Purchase Order assigned by the orderer/purchaser"/>
</Segment>
