<Segment name="STP" comment="To report study parameters">
  <Field name="Date" type="date" min="8" max="8" comment="Date expressed as CCYYMMDD where CC represents the first two digits of the calendar year"/>
  <Field name="EntityTitle" min="1" max="132" comment="Title of the data entity"/>
  <Field name="ReferenceIdentification1" min="1" max="50" comment="Reference information as defined for a particular Transaction Set or as specified by the Reference Identification Qualifier"/>
  <Field name="ReferenceIdentification2" min="1" max="50" comment="Reference information as defined for a particular Transaction Set or as specified by the Reference Identification Qualifier"/>
  <Field name="Number1" type="long" min="1" max="9" comment="A generic number"/>
  <Field name="Number2" type="long" min="1" max="9" comment="A generic number"/>
  <Field name="Number3" type="long" min="1" max="9" comment="A generic number"/>
  <Field name="Number4" type="long" required="y" min="1" max="9" comment="A generic number"/>
  <Field name="ReferenceIdentification3" required="y" min="1" max="50" comment="Reference information as defined for a particular Transaction Set or as specified by the Reference Identification Qualifier"/>
</Segment>
