<Segment name="FGS" comment="To provide information for a section or data group in a form or schedule">
  <Field name="AssignedIdentification" min="1" max="20" comment="Alphanumeric characters assigned for differentiation within a transaction set"/>
  <Field name="ReferenceIdentificationQualifier" required="y" min="2" max="3" validation="T128" comment="Code qualifying the Reference Identification"/>
  <Field name="ReferenceIdentification" required="y" min="1" max="50" comment="Reference information as defined for a particular Transaction Set or as specified by the Reference Identification Qualifier"/>
  <SyntaxNote name="P0203" comment="If either FGS02 or FGS03 is present, then the other is required."/>
</Segment>
