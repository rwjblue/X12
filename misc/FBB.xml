<Segment name="FBB" comment="To specify amount or percentage of foreign and/or industry business by the trading partner">
  <Field name="CountryCode" min="2" max="3" comment="Code identifying the country"/>
  <Field name="MonetaryAmount1" type="double" required="y" min="1" max="18" comment="Monetary amount"/>
  <Field name="Percent1" type="double" required="y" min="1" max="10" comment="Percentage expressed as a decimal"/>
  <Field name="IdentificationCodeQualifier" required="y" min="1" max="2" validation="T66" comment="Code designating the system/method of code structure used for Identification Code (67)"/>
  <Field name="IdentificationCode" required="y" min="2" max="80" comment="Code identifying a party or other code"/>
  <Field name="MonetaryAmount2" type="double" required="y" min="1" max="18" comment="Monetary amount"/>
  <Field name="Percent2" type="double" required="y" min="1" max="10" comment="Percentage expressed as a decimal"/>
  <SyntaxNote name="R0203" comment="At least one of FBB02 or FBB03 is required."/>
  <SyntaxNote name="L040607" comment="If FBB04 is present, then at least one of FBB06 or FBB07 is required."/>
  <SyntaxNote name="P0405" comment="If either FBB04 or FBB05 is present, then the other is required."/>
</Segment>
