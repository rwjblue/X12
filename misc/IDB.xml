<Segment name="IDB" comment="To provide information about previously guaranteed student loans">
  <Field name="LoanTypeCode" min="1" max="2" validation="T1262" comment="This code identifies the loan program or type"/>
  <Field name="AmountQualifierCode" min="1" max="3" validation="T522" comment="Code to qualify amount"/>
  <Field name="MonetaryAmount" type="double" min="1" max="18" comment="Monetary amount"/>
  <Field name="InterestRate" type="double" required="y" min="1" max="6" comment="The interest rate as a percentage"/>
  <Field name="LoanRateTypeCode" required="y" min="1" max="1" validation="T1086" comment="Code indicating the characteristics of the loan rate"/>
  <SyntaxNote name="P0405" comment="If either IDB04 or IDB05 is present, then the other is required."/>
</Segment>
